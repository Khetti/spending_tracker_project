<h1>New Transaction</h1>
<ul>
  <p><b>Budget: £<%= @user.report_budget %></b></p>
  <p><b>Total Spend: £<%= Transaction.total() %></b></p>

<form action="/transactions" method="post">

  <label for="amount">Amount: £</label>
  <input type="number" placeholder="0.00" min="0" step="0.01" name="amount" id="amount" required>

  <label>
    Select merchant:
    <select name="merchant_id" id="merchant">
      <% for merchant in @merchants %>
        <option value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select tag:
    <select name="tag_id" id="tag">
      <% for tag in @tags %>
        <option value="<%= tag.id %>"><%= tag.type %></option>
      <% end %>
    </select>
  </label>

  <input type="submit" value="Add Transaction">

</form>
</ul>
