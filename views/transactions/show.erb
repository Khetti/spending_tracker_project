<h1>Transaction <%= @transaction.id %></h1>
<ul>
  <p><b>Budget: £</b></p>
  <p><b>Total Spend: £<%= Transaction.total() %></b></p>
  
    <p>Merchant: <%= @transaction.merchant.name %></p>
    <p>Amount: £<%= @transaction.amount %></p>
    <p>Tags: <%= @transaction.tag.type %></p>
    <p>Time: <%= @transaction.timestamp %></p>
    <p>
      <a href="/transactions/<%= @transaction.id %>/edit">Edit</a>
    <p>
      <form method="POST" action="/transactions/<%= @transaction.id %>/delete">
        <input class="button" type="submit" value="delete">
      </form>
    <br>

</ul>
