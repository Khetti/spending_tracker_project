<h1>All Transactions</h1>
<ul>
  <p><b>Budget: £<%= @user.report_budget %></b></p>
  <a href="/users/<%= @user.id %>/edit">Update Budget</a>
  <p><b>Total Spend: £<%= Transaction.total() %></b></p>

  <a href="/transactions/sort/new-old">Newest - Oldest</a><br>
  <a href="/transactions/sort/old-new">Oldest - Newest</a><br>

  <% @transactions.each do |transaction| %>
    <p>Merchant: <%= transaction.merchant.name %></p>
    <p>Amount: £<%= transaction.amount %></p>
    <p>Tags: <%= transaction.tag.type %></p>
    <p>Time: <%= transaction.timestamp %></p>
    <p>
      <p>
        <a href="/transactions/<%= transaction.id %>/edit">Edit</a>
      <p>
    <p>
      <form action="/transactions/<%= transaction.id %>/delete" method="post">
        <input class="button" type="submit" value="delete">
      </form>
      <br>
  <% end %>
</ul>
